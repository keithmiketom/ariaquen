<header>
	<%= render 'layouts/nav'%>
	<section id="loginbox">
		<div>
			<% if user_signed_in? %> 
		 		<ul class="session">
		 			<li>Signed in as... <%= current_user.email %> </li>
		 			<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete  %></li>	 			
		 		</ul>
			<% else %>
				<ul class="session">
					<li><%= link_to 'Register', new_user_registration_path %></li>
					<li><%= link_to 'Sign in', new_user_session_path %></li>
				</ul>
			<%end%>
		</div>
	</section>
</header>
